@model EmployeeDetailsDto
<h1 class="my-5 w-75">Employee Details</h1>


<ul class="nav nav-tabs" id="EmployeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        @* //Return Id[PK], Name, Age, Address, Is Active, Salary , Email , Phone Number, HiringDate Gender and EmployeeType *@
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <input asp-for="IsActive" class="form-check-input" disabled />
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="HireDate"></label>
                <input asp-for="HireDate" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="EmployeeGender"></label>
                <input asp-for="EmployeeGender" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="EmployeeType"></label>
                <input asp-for="EmployeeType" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Department"></label>
                <input asp-for="Department" class="form-control" readonly />
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label">CreatedOn</label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
    </div>
</div>
